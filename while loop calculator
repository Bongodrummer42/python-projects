def calculator():
    operation = int(input("What operation would you like to select? 1. Addition 2. Subtraction: "))

    if operation != 1 and operation != 2:
        print("That is an invalid selection. Do you want to continue?")
    elif operation == 1 or operation == 2:
        num1 = int(input("What is the first number? "))
        num2 = int(input("What is the second number? "))

        if operation == 1:
            num3 = num1 + num2
            print("The answer is:", num3)
        elif operation == 2:
            num3 = num1 - num2
            print("The answer is:", num3)


running = 1
print("welcome to the calculator")
while running == 1:
    calculator()
    running = int(input("do you want to run the calculator again 1.yes 2.no"))
print("bye")
